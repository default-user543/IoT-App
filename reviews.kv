ScreenManager:
    LoginScreen:
    SignInScreen:
    ReviewScreen:

<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Login"
            font_size: 24

        TextInput:
            id: email_input
            hint_text: "Enter your email"
            multiline: False

        Button:
            text: "Login"
            on_release: root.login()

        Button:
            text: "Sign in"
            on_release: root.manager.current = "signin"

<SignInScreen>:
    name: "signin"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Sign In"
            font_size: 24

        TextInput:
            id: email_input
            hint_text: "Enter email"
            multiline: False

        TextInput:
            id: name_input
            hint_text: "Enter name"
            multiline: False

        TextInput:
            id: age_input
            hint_text: "Enter age"
            multiline: False
            input_filter: 'int'

        Spinner:
            id: gender_spinner
            text: "Select Gender"
            values: ["F", "M"]

        Button:
            text: "Register"
            on_release: root.register_user()

        Button:
            text: "Back to Login"
            on_release: root.manager.current = "login"

<ReviewScreen>:
    name: "review"
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: welcome_label
            text: "Welcome!"
            font_size: 20

        Spinner:
            id: zone_spinner
            text: "Select Zone"
            values: []

        TextInput:
            id: review_input
            hint_text: "Write your review"
            size_hint_y: None
            height: 100

        Button:
            text: "Submit Review"
            size_hint_y: None
            height: 40
            on_release: root.submit_review()

        ScrollView:
            GridLayout:
                id: reviews_container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
